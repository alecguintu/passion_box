<h1>Items</h1>

<%= form_for @item, :url => items_path(@item) do |f| %>

<fieldset>
  <legend>Item</legend>
  <div class="clearfix">
    <%= f.label :title %>
    <div class="input">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :description %>
    <div class="input"><%= f.text_area :description, :rows => 3 %></div>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', :class => 'btn primary' %>
  </div>
</fieldset>
<% end %>
