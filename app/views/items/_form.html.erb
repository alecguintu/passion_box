<fieldset>
  <div class="clearfix">
    <%= f.label :title %>
    <div class="input">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :collection %>
    <div class="input">
      <%= select :item, :box_id, Box.all.collect {|b| [b.name, b.id]} %>
    </div>
    
  </div>
  <div class="clearfix">
    <%= f.label :description %>
    <div class="input"><%= f.text_area :description, :rows => 3 %></div>
  </div>
  <div class="clearfix">
    <%= f.label :tags %>
    <div class="input">
      <%= f.text_field :tags %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', :class => 'btn primary' %>
    <%= link_to 'Cancel', items_path, :class => 'btn' %>
  </div>
</fieldset>