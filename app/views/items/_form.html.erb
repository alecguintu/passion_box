<fieldset>
  <%= hidden_field_tag :box_id, params[:id] %>
  <div class="clearfix">
    <%= f.label :title %>
    <div class="input">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :description %>
    <div class="input"><%= f.text_area :description, :rows => 3 %></div>
  </div>
  <div class="clearfix">
    <%= f.label :tags %>
    <div class="input">
      <%= f.text_field :tags %>
    </div>
  </div>
  
  <h4>Global Fields</h4>
  <% @template.global_fields.each do |gf| %>
    <div class="clearfix">
      <label for="<%= "item_#{gf}" %>"><%= gf %></label>
      <div class="input"><%= text_field_tag "item[#{gf}]" %></div>
    </div>
  <% end %>
  
  <h4>User Fields</h4>
  <% @template.user_fields.each do |uf| %>
    <div class="clearfix">
      <label for="<%= "user_item_#{uf}" %>"><%= uf %></label>
      <div class="input"><%= text_field_tag "user_item[#{uf}]", (eval("@item.#{uf}") unless @item.new?) %></div>
    </div>
  <% end %>
  
  <div class="actions">
    <%= f.submit 'Submit', :class => 'btn primary' %>
    <%= link_to 'Cancel', items_path, :class => 'btn' %>
  </div>
</fieldset>