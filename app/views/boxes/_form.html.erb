<h2>New Collection</h2>

<%= form_for @box do |f| %>
<fieldset>
  <div class="clearfix">
    <%= f.label :category %>
    <div class="input">
      <%= select :box, :category_id, Category.order_by(:name).all.collect {|c| [c.name, c.id]} %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :name %>
    <div class="input">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', :class => 'btn primary' %>
    <%= link_to 'Cancel', boxes_path, :class => 'btn' %>
  </div>
</fieldset>
<% end %>
