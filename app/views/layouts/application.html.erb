<!DOCTYPE html>
<html>
<head>
  <title>PassionBox</title>
  <%= stylesheet_link_tag "twitbootstrap", "style", "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">

    <div class="topbar">
      <div class="topbar-inner">
        <div class="container">
          <h3><%= link_to 'PassionBox', root_path %></h3>
          <ul class="nav">
            <% if current_user %>
            <li><%= link_to 'My Collections', user_path(current_user) %></li>
            <li><%= link_to 'Sign Out', signout_path %></li>
            <% else %>
            <li><%= link_to 'Twitter Sign In', "auth/twitter" %></li>
            <li><%= link_to 'Facebook Sign In', "auth/facebook" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div id="content">
      <%= flash_helper %>
      <%= yield %>
    </div>
  </div>
</body>
</html>
